<?xml version="1.0"?>
<!DOCTYPE cache PUBLIC
    "-//GemStone Systems, Inc.//GemFire Declarative Caching 8.0//EN"
    "http://www.gemstone.com/dtd/cache8_0.dtd">

<cache>
    
    <!-- Defines the persistent channel that chats and batches across the WAN -->
    <!-- sends data when it has 50 objects or 1 second has elapsed, whichever comes first -->
    <gateway-sender id="DC1" remote-distributed-system-id="2" parallel="true" enable-persistence="true" disk-store-name="myDisk"
        maximum-queue-memory="50" batch-size="10" batch-time-interval="1000"
        manual-start="false"/>
    <gateway-receiver/>
	
	<disk-store name="myDisk" compaction-threshold="40" 
		       auto-compact="false" allow-force-compaction="true"
	   	    max-oplog-size="20" queue-size="10000"  
	   	    time-interval="15" write-buffer-size="65536">
		   <disk-dirs>
			      <disk-dir>/Users/lwang/Desktop/myDisk</disk-dir>
		   </disk-dirs>
	</disk-store>

    <!-- persistent is needed because we are saving serialized objects in the gateway sender -->
    <pdx read-serialized="true" persistent="true">
        <pdx-serializer>
            <class-name>com.gemstone.gemfire.pdx.ReflectionBasedAutoSerializer</class-name>
        </pdx-serializer>
    </pdx>

    <!-- the gateway-sender-id references the above gateway sender for WAN replication -->
    <region name="employees">
        <region-attributes data-policy="partition"
            enable-gateway="true"
            gateway-sender-ids="DC1"
            concurrency-checks-enabled="true">
            <partition-attributes redundant-copies="1" total-num-buckets="11"/>
            <eviction-attributes>
                <lru-heap-percentage action="overflow-to-disk"/>
            </eviction-attributes>
        </region-attributes>
    </region>

    
    <resource-manager critical-heap-percentage="75" eviction-heap-percentage="65"/>
</cache>

